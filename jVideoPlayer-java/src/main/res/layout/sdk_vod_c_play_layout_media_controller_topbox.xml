<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/media_top_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/sdk_vod_c_play_sm_10"
        android:layout_marginEnd="@dimen/sdk_vod_c_play_sm_10"
        android:layout_height="@dimen/sdk_vod_c_play_sm_50">

        <ImageView
            android:id="@+id/media_back"
            android:layout_width="@dimen/sdk_vod_c_play_sm_24"
            android:layout_height="@dimen/sdk_vod_c_play_sm_24"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sdk_vod_c_play_ic_back"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/media_title"
            android:layout_toEndOf="@id/media_back"
            android:layout_toStartOf="@id/media_top_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:visibility="gone"
            tool:text="Enola Holmes"/>

        <LinearLayout
            android:id="@+id/media_top_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/media_free_trial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="@string/sdk_vod_c_play_str_free_trial_tips"
                android:layout_gravity="center"
                android:textSize="@dimen/sdk_vod_c_play_font_size_26px"
                android:textColor="@color/white"
                android:background="@drawable/sdk_vod_c_play_bg_free_trial_tv"
                android:visibility="gone"/>

<!--            <ImageView-->
<!--                android:id="@+id/media_top_feedback"-->
<!--                android:layout_width="@dimen/sdk_vod_c_play_sm_21"-->
<!--                android:layout_height="@dimen/sdk_vod_c_play_sm_21"-->
<!--                android:scaleType="centerInside"-->
<!--                android:layout_gravity="center"-->
<!--                android:src="@drawable/m_play_ic_feedback" />-->

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>